<div class="top-main">
  <h1>Check a Porker Hand</h1>
</div>

<div class="form">
  <%= form_tag ({ :controller => 'cards', :action => 'judge' }) do %>
    <input type="text" name="cards" value="<%= @cards.cards %>" >
    <input type="submit" value="check">
  <% end %>
</div>

<!– エラー表示箇所 -->
<div class="error_message">
  <% @cards.errors.each do |error| -%>
    <ul><%= error %></ul>
  <% end -%>
</div>
