<div class="top-main">
  <h1>Check a Porker Hand</h1>
</div>

<div class="form">
  <%= form_tag ({ :controller => 'cards', :action => 'judge' }) do %>
  <textarea type="text" name="hand"><%= @cards.hand %></textarea>
  <input type="submit" value="check">
  <% end %>
</div>

<!– 結果表示箇所 -->
<div class="result_message">
  <%= @cards.result %>
</div>
